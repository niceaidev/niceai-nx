{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@jhasuraj01/tsconfig",
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "src",
    "outDir": "dist",
    "declarationDir": "dist",
    "module": "Node16",
    "moduleResolution": "Node16",
    "composite": true
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "ts-node": {
    "esm": true
  }
}